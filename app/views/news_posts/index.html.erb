<div class="news-feed-wrap">

<h1 class="titles">News Feed</h1>

  <div class="news-feed-articles">
    <ul>
      <% @news_posts.each do |post| %>
        <li><%= link_to post.title, post %>
          <p><b>Author</b>   <%= link_to post.charity.organization_name, post.charity %></p>
        </li>
        <% if post.image.present? %>
          <%= image_tag post.image, src: post.image, onerror: 'this.error=null;this.src="/gina.jpg"', width: "100", height: "60" %>
        <% else %>
          <%= link_to post.image do %>
            <%= image_tag "https://images.freeimages.com/images/large-previews/25d/eagle-1523807.jpg", width: "100", height: "60" %>
          <% end %>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
