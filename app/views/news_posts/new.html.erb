<% provide(:title, 'Create a News Post') %>
<h1 class="title">Create a News Post</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3 mr-5 ml-5">
    <%= form_for(@news_post) do |f| %>

      <%= f.label :title, class: "mt-3" %>
      <%= f.text_field :title, class: "form-control"  %>

      <%= f.label :text, class: "mt-3" %>
      <%= f.text_area :text, class: "form-control"  %>

      <%= f.label :url, class: "mt-3" %>
      <%= f.url_field :url, class: "form-control" %>

      <%= f.submit "Submit Post", class: "btn btn-success btn-lg btn-block mt-3 mb-5" %>
    <% end %>
  </div>
</div>
