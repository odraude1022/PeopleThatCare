<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row form-group">
  <div class="col-md-6 col-md-offset-3 m-3">
    <%= form_for(@charity) do |f| %>

      <%= f.label :organization_name, class: "mt-3" %>
      <%= f.text_field :organization_name, class: 'form-control' %>

      <%= f.label :tax_id, class: "mt-3" %>
      <%= f.number_field :tax_id, class: 'form-control' %>

      <%= f.label :contact_name, class: "mt-3" %>
      <%= f.text_field :contact_name, class: 'form-control' %>

      <%= f.label :contact_email, class: "mt-3" %>
      <%= f.email_field :contact_email, class: 'form-control' %>

      <%= f.label :website_url, class: "mt-3" %>
      <%= f.text_field :website_url, class: 'form-control' %>

      <%= f.label :twitter_handle, class: "mt-3" %>
      <%= f.text_field :twitter_handle, class: 'form-control' %>

      <%= f.label :password, class: "mt-3" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation", class: "mt-3"%>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.label :avatar %>
      <%= f.file_field :avatar %>

      <%#= f.label 'Categories' %>
      <%#= f.collection_check_boxes :categories, @categories, :id, :category_name %>


      <%= f.submit "Create my account", class: "btn btn-success btn-lg btn-block mt-3" %>
    <% end %>
  </div>
</div>
