<h1>Edit Profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3 m-3">
    <%= form_for(@charity) do |f| %>

      <%= f.label :organization_name %>
      <%= f.text_field :organization_name, class: "form-control" %>

      <%= f.label :tax_id %>
      <%= f.number_field :tax_id, class: "form-control" %>

      <%= f.label :contact_name %>
      <%= f.text_field :contact_name, class: "form-control" %>

      <%= f.label :contact_email %>
      <%= f.email_field :contact_email, class: "form-control" %>

      <%= f.label :website_url %>
      <%= f.text_field :website_url, class: "form-control" %>

      <%= f.label :twitter_handle %>
      <%= f.text_field :twitter_handle, class: "form-control" %>

      <%= f.label 'Categories', class: "mt-3" %> <br>
      <span class="label-space"><%= f.collection_check_boxes :categories, @categories, :id, :category_name  do |box| %></span>
        <%= box.label %> <%= box.check_box class: "category_check_box", checked: @charity.categories.pluck(:id).include?(box.value)%>
      <% end %>
      <br>

      <div class="fileUpload btn btn-secondary mt-3">
        <%= f.label :avatar, "Change picture", class: "mb-0"%>
        <%= f.file_field :avatar, class: "upload" %>
      </div>

      <%= f.submit "Save Changes", class: "btn btn-primary btn-lg btn-block mt-3" %>
    <% end %>
  </div>
</div>

<%= console %>
